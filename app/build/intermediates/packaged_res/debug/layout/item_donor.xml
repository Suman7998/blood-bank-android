<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with profile image and basic info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:id="@+id/ivProfile"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="12dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_person_placeholder" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Donor Name"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@android:color/black" />

                    <ImageView
                        android:id="@+id/ivVerified"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_verified"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/tvBloodGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A+"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:background="@drawable/blood_group_background"
                        android:padding="6dp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tvAvailability"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Available"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="@android:color/holo_green_dark" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Donor Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/tvAge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="25 years"
                    android:textSize="14sp"
                    android:drawableStart="@drawable/ic_age"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/tvGender"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Male"
                    android:textSize="14sp"
                    android:drawableStart="@drawable/ic_gender"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mumbai, Sector 5"
                android:textSize="14sp"
                android:drawableStart="@drawable/ic_location"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+91-9876543210"
                android:textSize="14sp"
                android:drawableStart="@drawable/ic_phone"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvSpecialNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Regular donor, very reliable"
                android:textSize="12sp"
                android:textStyle="italic"
                android:textColor="@android:color/darker_gray"
                android:drawableStart="@drawable/ic_note"
                android:drawablePadding="8dp"
                android:gravity="center_vertical" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ“ž Call"
                android:textSize="12sp"
                android:layout_marginEnd="4dp"
                android:backgroundTint="@color/colorPrimary" />

            <Button
                android:id="@+id/btnViewImages"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ–¼ï¸ Images"
                android:textSize="12sp"
                android:layout_marginEnd="4dp"
                android:backgroundTint="@color/colorAccent" />

            <Button
                android:id="@+id/btnPlayVoice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸŽµ Voice"
                android:textSize="12sp"
                android:layout_marginEnd="4dp"
                android:backgroundTint="@android:color/holo_orange_light" />

            <Button
                android:id="@+id/btnPlayVideo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ“¹ Video"
                android:textSize="12sp"
                android:backgroundTint="@android:color/holo_purple" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
